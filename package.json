{
  "name": "chat-agent-platform",
  "version": "1.0.0",
  "description": "A plug-and-play platform for creating custom chat agents powered by LLMs and Contentstack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": ["chatbot", "llm", "contentstack", "ai", "platform"],
  "author": "Chat Agent Platform",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
